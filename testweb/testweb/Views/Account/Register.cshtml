@{
    ViewData["Title"] = "Register";
}


<script src="~/lib/jquery/dist/jquery.js"></script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
@model RegisterViewModel
<h1>ثبت نام</h1>
<div class="customer-login-register">
    <div class="login-Register-info">
        <form asp-controller="Account" asp-action="RegisterConfirm">
            <p class="coupon-input form-row-first">
                <label>نام  <span class="required">*</span></label>
                <input asp-for="firstName">
                <span asp-validation-for="firstName"></span>
            </p>
            <p class="coupon-input form-row-first">
                <label> نام خانوادگی  <span class="required">*</span></label>
                <input asp-for="lastname">
                <span asp-validation-for="lastname"></span>
            </p>
            <p class="coupon-input form-row-first">
                <label>نام کاربری یا ایمیل <span class="required">*</span></label>
                <input type="text" asp-for="username">
                <span asp-validation-for="username"></span>
            </p>
            <p class="coupon-input form-row-last">
                <label>رمز عبور <span class="required">*</span></label>
                <input type="password" asp-for="password">
                <span asp-validation-for="password"></span>
            </p>
            <div class="clear"></div>
            <p>
                <button value="Login" name="login" class="button-login" type="submit">ثبت نام</button>
                <label><input type="checkbox" value="1"><span>به خاطر سپاری</span></label>
                <a href="#" class="lost-password">رمز عبور خود را فراموش کرده اید؟</a>
            </p>
        </form>
    </div>
</div>



@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel
<script src="~/lib/jquery/dist/jquery.js"></script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<h1>ورود</h1>
<div class="customer-login-register">
    <div class="login-Register-info">
        <form asp-controller="Account" asp-action="LoginConfirm">
            <p class="coupon-input form-row-first">
                <label>نام کاربری یا ایمیل <span class="required">*</span></label>
                <input type="text" asp-for="username">
                <span asp-validation-for="username"></span>
            </p>
            <p class="coupon-input form-row-last">
                <label>رمز عبور <span class="required">*</span></label>
                <input type="password" asp-for="password">
                <span asp-validation-for="password"></span>
            </p>
            <div class="clear"></div>
            <p>
                <div class="g-recaptcha" data-sitekey="6Ldqq5kdAAAAADlJmD849b8ccbOjH5MKpXLwTjHr"></div>
            </p>
            <p>
                <button value="Login" name="login" class="button-login" type="submit">ورود</button>
                <label><input type="checkbox" value="1"><span>به خاطر سپاری</span></label>
                <a href="#" class="lost-password">رمز عبور خود را فراموش کرده اید؟</a>
            </p>
        </form>
    </div>
</div>


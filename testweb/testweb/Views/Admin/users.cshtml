@{
    ViewData["Title"] = "test";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>



@model List<UsersViewModels>
<h1>ListofUsers</h1>
<table class="table table-bordered table-striped">
    <thead><tr><td>UserName</td><td>firstName</td><td>Lastname</td><td>Email</td><td>Rolename</td><td>Action</td></tr></thead>
    @{
        foreach (var item in Model)
        {
            string r = @item.id;
            <tr>
                <td>@item.username</td>
                <td>@item.firstName</td>
                <td>@item.lastName</td>
                <td>@item.Email</td>
                <td>@item.RoleName</td>
                <form asp-controller="Admin" asp-route-id="@item.id" asp-action="EditUsers">
                <td><button class="btn btn-danger" onclick="F1(@item.id)">edit</button></td>
                </form>
                <form asp-controller="Admin" asp-route-id="@item.id" asp-action="DeleteUser">
                <td><button class="btn btn-danger" onclick="F1(@item.id)">حذف</button></td>
                </form>
            </tr>
        }
    }

</table>


